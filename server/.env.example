# Server Configuration
PORT=8000
NODE_ENV=development

# Database
MONGODB_URL=mongodb://localhost:27017/nexthire

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d
COOKIE_EXPIRE=7

# Email Configuration (for nodemailer)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Cloudinary Configuration
CLOUDINARY_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_SECRET_KEY=your_cloudinary_secret_key

# Google Generative AI (Gemini)
GOOGLE_GENERATIVE_AI_API_KEY=your_google_generative_ai_api_key

# Frontend URL (for email verification links, reset password links, etc.)
FRONTEND_URL=http://localhost:5173
# Alternative: CLIENT_URL (will be used if FRONTEND_URL is not set)

# Backend URL (for Swagger documentation)
BACKEND_URL=http://localhost:8000
# Alternative: SERVER_URL (will be used if BACKEND_URL is not set)

# Production Backend URL (optional, for Swagger documentation)
PRODUCTION_BACKEND_URL=https://nexthire.onrender.com

# CORS Configuration
# FRONTEND_URL and CLIENT_URL are also used for CORS origin
# If both are not set, CORS will allow all origins (*)
